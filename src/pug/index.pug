//- index.pug
doctype html
html(lang='en')
	include templates/head.pug
	body.home
		button.toggle
			span#toggle-label(hidden) Switch to dark mode
		#preview(aria-hidden='true')
		header.header--grid
			h1.header__title Chris van Wagoner
			figure.header__figure
				img.lazyload(src='images/chris-van-wagoner-portrait-blur.jpg', 
				srcset='images/chris-van-wagoner-portrait-blur.jpg', 
				data-src='images/chris-van-wagoner-portrait@1x.jpg', 
				data-srcset='images/chris-van-wagoner-portrait@2x.jpg 2x', 
				alt='A black and white photograph of Chris van Wagoner', 
				height='512',
				width='512',
				loading='lazy')
			.header__intro
				p Chris is a Maryland-based web developer for the digital marketing agency, #[a.link(href='https://www.socialdriver.com' target='_blank' rel='noopener') Social&nbsp;Driver].
		main#app
			h2.main__title Selected <br>Work
			ul.main__clients
				li(v-for='(client, index) in clients' :key='index', 
				v-bind:class="'client client--' + client.class")
					a.client__name(v-bind:href='client.url', 
					v-bind:data-preview='client.imgSrc',
					target='_blank', 
					rel='noopener') 
						span {{ client.name }}
		include templates/footer.pug
		