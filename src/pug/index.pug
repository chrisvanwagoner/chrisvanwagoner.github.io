//- index.pug
include data/clients.pug

doctype html
html(lang='en')
	include templates/head.pug
	body.home
		include templates/nav.pug
		#preview(aria-hidden='true')
		header.header--grid
			h1.header__title Chris van Wagoner
			figure.header__figure
				img(src='images/dithered-portrait.png', 
				srcset='images/dithered-portrait@2x.png 2x', 
				alt='A black and white, dithered photograph of Chris van Wagoner', 
				height='512',
				width='512',
				loading='lazy')
			.header__intro
				p Chris is a Maryland-based web developer for the digital marketing agency, #[a.link(href='https://www.socialdriver.com' target='_blank' rel='noopener') Social&nbsp;Driver].
		main
			h2.main__title Selected <br>Work
			ul.main__clients
				each client in clients
					li(class='client client--' + `${client.class}`)
						a.client__name(href=`${client.url}`,
						target='_blank', 
						rel='noopener') 
							span #{client.name}
		include templates/footer.pug
		
